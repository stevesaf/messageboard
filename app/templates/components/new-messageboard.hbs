{{#if addNewMessageboard}}
  <h1>New Question(s)</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="question">What is your question?</label>
        {{input value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="notes">Add any additional details</label>
        {{input value=notes id="notes"}}
      </div>

      <div class="form-group">
        <label for="author">Enter your name</label>
        {{input value=author id="author"}}
      </div>

      <button {{action 'saveMessageboard1'}}>Submit</button>
    </form>
  </div>
{{else}}
  <button {{action 'messageboardFormShow'}}>New Question</button>
{{/if}}
